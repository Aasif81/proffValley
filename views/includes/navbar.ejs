    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a href="/professors" class="nav-link fw-semibold text-white">Professors</a>
        </li>
      </ul>

      <!-- ðŸ” Centered Search Bar -->
      <div class="mx-auto" style="width: 40%;" id="search-container">
        <form action="/professors" method="GET" role="search" class="d-flex" id="prof-search-form">
          <input 
            type="text" 
            name="q" 
            id="liveSearchInput"
            class="form-control me-2 rounded-pill" 
            placeholder="Search professors by name or department..." 
            value="<%= typeof query !== 'undefined' ? query : '' %>">
          <button class="btn btn-light text-primary rounded-pill fw-semibold px-3" type="submit">
            Search
          </button>
        </form>
      </div>

      <!-- Right side buttons -->
      <ul class="navbar-nav ms-auto align-items-lg-center">
        <% if (currentUser && currentUser.isAdmin) { %>
