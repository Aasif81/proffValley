<!-- ðŸ§  Dropdown container must be OUTSIDE the navbar -->
<div id="liveSearchResults" class="live-search-results"></div>

<script>
document.addEventListener("DOMContentLoaded", () => {
  const input = document.getElementById("liveSearchInput");
  const results = document.getElementById("liveSearchResults");

  input.addEventListener("input", async () => {
    const query = input.value.trim();
    if (!query) {
      results.classList.remove("active");
      results.innerHTML = "";
      return;
    }

    const res = await fetch(`/professors/search/live?q=${encodeURIComponent(query)}`);
    const data = await res.json();

    if (data.length === 0) {
      results.innerHTML = `<div class="px-3 py-2 text-muted">No matches found</div>`;
    } else {
      results.innerHTML = data.map(p => `
        <a href="/professors/${p._id}" class="d-block px-3 py-2 text-dark text-decoration-none border-bottom">
          <strong>${p.name}</strong> <small class="text-muted">(${p.department})</small>
        </a>
      `).join("");
    }

    results.classList.add("active");
  });

  document.addEventListener("click", e => {
    if (!results.contains(e.target) && e.target !== input) {
      results.classList.remove("active");
    }
  });
});
</script>
