<% layout('layouts/boilerplate') %>

<div class="container mt-5" style="max-width: 500px;">
  <h2 class="text-center mb-4">Create an Account</h2>

  <form action="/signup" method="POST">
    <div class="mb-3">
      <label for="email" class="form-label">Email Address</label>
      <input type="email" name="email" id="email" class="form-control" required>
    </div>

    <div class="mb-3">
      <label for="username" class="form-label">Username</label>
      <input type="text" name="username" id="username" class="form-control" required>
    </div>

    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input type="password" name="password" id="password" class="form-control" required>
    </div>

    <button type="submit" class="btn btn-success w-100">Sign Up</button>
  </form>

  <div class="text-center mt-3">
    <p class="text-muted">Already registered? <a href="/login">Login here</a>.</p>
  </div>

  <!-- âœ… Add OAuth Signup/Login Options -->
  <hr class="my-4">

  <div class="text-center">
    <p class="text-muted mb-3">Or sign up using</p>

    <a href="/auth/google" class="btn btn-outline-danger w-100 mb-2" style="display: flex; align-items: center; justify-content: center;">
      <img src="https://www.svgrepo.com/show/355037/google.svg" alt="Google" width="20" height="20" class="me-2">
      Continue with Google
    </a>

   <!-- <a href="/auth/microsoft" class="btn btn-outline-primary w-100" style="display: flex; align-items: center; justify-content: center;">
      <img src="https://www.svgrepo.com/show/452213/microsoft.svg" alt="Microsoft" width="20" height="20" class="me-2">
      Continue with Microsoft
    </a>-->
  </div>
</div>


