<% layout('layouts/boilerplate') %>

<div class="col-md-6 mx-auto mt-5">
  <h2 class="mb-4 text-center">Add a New Professor</h2>

  <!-- ðŸ§© Added: enctype to support file upload -->
  <form action="/professors" method="POST" enctype="multipart/form-data">

    <div class="mb-3">
      <label for="name" class="form-label">Professor Name</label>
      <input type="text" id="name" name="professor[name]" class="form-control" required>
    </div>

    <div class="mb-3">
      <label for="department" class="form-label">Department</label>
      <input type="text" id="department" name="professor[department]" class="form-control">
    </div>

    <div class="mb-3">
      <label for="university" class="form-label">University</label>
      <input type="text" id="university" name="professor[university]" class="form-control">
    </div>

    <!-- ðŸ†• Added: Image upload field -->
    <div class="mb-3">
      <label for="image" class="form-label">Profile Picture (optional)</label>
      <input type="file" id="image" name="image" class="form-control" accept="image/*">
    </div>

    <button class="btn btn-success w-100">Add Professor</button>
  </form>
</div>


